package classe;

public class Produto {

	String nome;
	double preco;
	double desconto;
	static double desconto25;
	
	Produto(){
	}
	
	Produto(String nomeInicial, double precoInicial, 
			double descontoInicial){
		nome = nomeInicial;
		preco = precoInicial;
		desconto = descontoInicial;
	}
	
	double precoComDesconto() {
		return preco * (1 - desconto);
	}
	double precoComDesconto(double descontDoGerente) {
		return preco * (1 - desconto + descontDoGerente);
	}
}
